@model FA.JustBlog.Core.Models.Post

        <div class="post-preview">
                            <a href="@Url.Action("Detail","Post", new { id = Model.PostId })">
                                        <h2 class="post-title">@Model.Title</h2>
                                        <h3 class="post-subtitle">@Model.ShortDescription</h3>
                                    </a>
                                    <p class="post-meta">
                                        Posted @Model.PostedOn with rate
                                    </p>
        </div>
        <!-- Divider-->
        <hr class="my-4" />
        

