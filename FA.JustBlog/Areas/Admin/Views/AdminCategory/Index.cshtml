@model IEnumerable<FA.JustBlog.Core.Models.Category>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<main>
    <div class="container-fluid px-4">
        <h1 class="mt-4">Tables</h1>
        <div class="card mb-4">
            <div class="card-body">
                <td><a class="btn btn-primary" asp-action="Create" asp-controller="AdminCategory">New</a></td>
            </div>
        </div>
        <div class="card mb-4">
            <div class="card-header">
                <i class="fas fa-table me-1"></i>
                All category
            </div>
            <div class="card-body">
                <table id="datatablesSimple">
                    <thead>
                        <tr>
                            <th>@Html.DisplayNameFor(x => x.CategoryId)</th>
                            <th>@Html.DisplayNameFor(x => x.CategoryName)</th>
                            <th>@Html.DisplayNameFor(x => x.UrlSlug)</th>
                            <th>@Html.DisplayNameFor(x => x.Description)</th>                   
                            <th></th>
                            <th></th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    <span>
                                    @item.CategoryId
                                    </span>
                                </td>
                                <td>
                                    <span>
                                        @item.CategoryName
                                    </span>
                                </td>
                                <td>@item.UrlSlug</td>
                                <td>@item.Description</td>
                                <td>
                                    <a asp-action="Edit" asp-controller="AdminCategory" asp-route-id="@item.CategoryId" class="btn btn-primary" type="submit" asp-for>Edit</a>
                                </td>
                                <td>
                                    <a asp-action="Details" asp-controller="AdminCategory" asp-route-id="@item.CategoryId" class="btn btn-warning">Details</a>
                                </td>
                                <td>
                                    <a asp-action="Delete" asp-controller="AdminCategory" asp-route-id="@item.CategoryId" class="btn btn-danger" type="submit">Delete</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</main>
